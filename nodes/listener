#pin setup
FL=4
RL=6
FM=[11,22,27]
RM=[17,9,10]

#GPIO setup
GPIO.setmode(GPIO.BCM)

#FrontLed
GPIO.setup(FL,GPIO.OUT)
GPIO.output(FL,0)

#RearLed
GPIO.setup(RL,GPIO.OUT)
GPIO.output(RL,0)

#FrontMotor/RearMotor
for pin in FM+RM:
    GPIO.setup(pin,GPIO.OUT)
    GPIO.output(pin,0)

#motor setup
pwm=GPIO.PWM(RM[0], 100)
pwm.start(0)


#motor func
def motor(pin,speed):
    pwm.ChangeDutyCycle(abs(speed))
    if speed<0:
        GPIO.output(pin[1],0)
        GPIO.output(pin[2],1)
    elif speed>0:
        GPIO.output(pin[1],1)
        GPIO.output(pin[2],0)
    else:
        GPIO.output(pin[1],0)
        GPIO.output(pin[2],0)

FL_IO=0
FL_num=0
#callback
def callback(data):
