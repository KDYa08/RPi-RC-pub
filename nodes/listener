def led_callback(data):#
    if data.data == 1:#
        rospy.loginfo('led_in')
        GPIO.output(20,1)#
        time.sleep(1)
    else:#
        rospy.loginfo('led_off')
        GPIO.output(20,0)#

def listener():
    rospy.init_node('listener', anonymous=True)
    rospy.Subscriber('chatter', UInt8, led_callback)

    
    rospy.spin()

